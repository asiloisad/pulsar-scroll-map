{
  "name": "scroll-map",
  "description": "Show markers on the scroll bar of text-editor",
  "repository": "https://github.com/asiloisad/pulsar-scroll-map",
  "keywords": [
    "scroll",
    "map",
    "navigation",
    "marker"
  ],
  "version": "2.1.0",
  "license": "MIT",
  "engines": {
    "atom": ">=1.100.0 <2.0.0"
  },
  "main": "./lib/main",
  "consumedServices": {
    "find-and-replace": {
      "versions": {
        "0.0.1": "consumeFindService"
      }
    }
  },
  "providedServices": {
    "scroll-map": {
      "versions": {
        "0.0.1": "serviceProvider"
      }
    }
  },
  "dependencies": {
    "etch": "^0.14.1"
  },
  "configSchema": {
    "cursorLayer": {
      "order": 1,
      "title": "Cursors position markers",
      "description": "Markers for each cursor in the editor.",
      "type": "object",
      "properties": {
        "state": {
          "order": 1,
          "type": "boolean",
          "title": "Layer state",
          "description": "Enable or disable this layer.",
          "default": true
        },
        "threshold": {
          "order": 2,
          "title": "Layer threshold",
          "description": "The limit doesn't apply if zero.",
          "type": "integer",
          "minimum": 0,
          "default": 0
        }
      }
    },
    "findLayer": {
      "order": 2,
      "title": "find-and-replace markers",
      "description": "Markers from [find-and-replace](https://github.com/pulsar-edit/pulsar/tree/master/packages/find-and-replace) results.",
      "type": "object",
      "properties": {
        "state": {
          "order": 1,
          "type": "boolean",
          "title": "Layer state",
          "description": "Enable or disable this layer.",
          "default": true
        },
        "threshold": {
          "order": 2,
          "title": "Layer threshold",
          "description": "The limit doesn't apply if zero.",
          "type": "integer",
          "minimum": 0,
          "default": 0
        }
      }
    }
  }
}
