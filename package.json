{
  "name": "scroll-map",
  "description": "Show markers on the scroll bar of text-editor",
  "repository": "https://github.com/asiloisad/pulsar-scroll-map",
  "keywords": [
    "scroll",
    "map",
    "navigation",
    "marker"
  ],
  "version": "1.3.2",
  "license": "MIT",
  "engines": {
    "atom": ">=1.100.0 <2.0.0"
  },
  "main": "./lib/main",
  "consumedServices": {
    "find-and-replace": {
      "versions": {
        "0.0.1": "findLayer"
      }
    },
    "navigation-panel": {
      "versions": {
        "0.0.1": "naviLayer"
      }
    }
  },
  "providedServices": {
    "scroll-map": {
      "versions": {
        "0.0.1": "serviceProvider"
      }
    },
    "linter-ui": {
      "versions": {
        "1.0.0": "linterLayer"
      }
    }
  },
  "dependencies": {
    "etch": "^0.14.1"
  },
  "configSchema": {
    "cursorLayer": {
      "order": 1,
      "title": "Cursors position markers",
      "description": "Markers for each cursor in the editor.",
      "type": "object",
      "properties": {
        "state": {
          "order": 1,
          "type": "boolean",
          "title": "Layer state",
          "description": "Restart needed.",
          "default": true
        },
        "threshold": {
          "order": 2,
          "title": "Layer threshold",
          "description": "The limit doesn't apply if zero.",
          "type": "integer",
          "minimum": 0,
          "default": 0
        }
      }
    },
    "findLayer": {
      "order": 2,
      "title": "find-and-replace markers",
      "description": "Markers from [find-and-replace](https://github.com/pulsar-edit/pulsar/tree/master/packages/find-and-replace) results.",
      "type": "object",
      "properties": {
        "state": {
          "order": 1,
          "type": "boolean",
          "title": "Layer state",
          "description": "Restart needed.",
          "default": true
        },
        "threshold": {
          "order": 2,
          "title": "Layer threshold",
          "description": "The limit doesn't apply if zero.",
          "type": "integer",
          "minimum": 0,
          "default": 0
        }
      }
    },
    "naviLayer": {
      "order": 3,
      "title": "navigation-panel markers",
      "description": "Markers from [navigation-panel](https://github.com/asiloisad/pulsar-navigation-panel) header list.",
      "type": "object",
      "properties": {
        "state": {
          "order": 1,
          "type": "boolean",
          "title": "Layer state",
          "description": "Restart needed.",
          "default": true
        },
        "threshold": {
          "order": 2,
          "title": "Layer threshold",
          "description": "The limit doesn't apply if zero.",
          "type": "integer",
          "minimum": 0,
          "default": 0
        }
      }
    },
    "linterLayer": {
      "order": 3,
      "title": "linter markers",
      "description": "Markers from [linter](https://github.com/steelbrain/linter).",
      "type": "object",
      "properties": {
        "state": {
          "order": 1,
          "type": "boolean",
          "title": "Layer state",
          "description": "Restart needed.",
          "default": true
        },
        "threshold": {
          "order": 2,
          "title": "Layer threshold",
          "description": "The limit doesn't apply if zero.",
          "type": "integer",
          "minimum": 0,
          "default": 0
        }
      }
    }
  }
}
